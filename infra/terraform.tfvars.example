# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

# GCP Configuration
project_id = "your-gcp-project-id"
region     = "us-central1"

# Environment and Service Configuration
environment  = "staging"
service_name = "clipvault-public-api"

# Container Configuration
container_image = "us-central1-docker.pkg.dev/your-project/clipvault-public-api-staging/clipvault-public-api:latest"

# Scaling Configuration
min_instances = 0
max_instances = 20
cpu_limit     = "1000m"
memory_limit  = "512Mi"

# Supabase Configuration (mark as sensitive)
supabase_url              = "https://your-project.supabase.co"
supabase_anon_key         = "your-supabase-anon-key"
supabase_service_role_key = "your-supabase-service-role-key"

# Optional: Redis Configuration
redis_url = ""  # Leave empty if not using Redis

# Pub/Sub Configuration
pubsub_topic_name = "clip-events" 